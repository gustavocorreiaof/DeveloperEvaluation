@page "/enter-userId"
@using Core.Domain.Enums
@inject NavigationManager Navigation
@inject IJSRuntime JS

<div class="login-container">
    <div class="login-box">

        <h2>Enter the user ID to list their countries/cities</h2>

        <div class="input-group">
            <span class="icon oi oi-key"></span>
            <input @bind="UserId" class="input-field" placeholder="User ID" />
        </div>

        <button class="login-button" @onclick="GoToListPage">List</button>
    </div>
</div>

@code {
    private string UserId { get; set; } = string.Empty;

    private async Task GoToListPage()
    {
        await JS.InvokeVoidAsync("localStorage.setItem", "userId", UserId);
        Navigation.NavigateTo("/favorites/List");
    }
}

