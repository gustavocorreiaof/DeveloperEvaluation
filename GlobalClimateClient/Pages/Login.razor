@page "/"
@using System.ComponentModel.DataAnnotations
@using GlobalClimateAPI.Requests

<EditForm Model="@loginRequest" OnValidSubmit="HandleLogin">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-100 to-blue-300 px-4">
        <div class="bg-white p-8 rounded-2xl shadow-lg w-full max-w-md">
            <h1 class="text-2xl font-semibold mb-6 text-center text-gray-800">Login</h1>

            <div class="mb-4">
                <label class="block text-gray-700 mb-1">UserName</label>
                <InputText @bind-Value="loginRequest.UserName" class="w-full p-2 border border-gray-300 rounded" />
                <ValidationMessage For="@(() => loginRequest.UserName)" />
            </div>

            <div class="mb-4">
                <label class="block text-gray-700 mb-1">Senha</label>
                <InputText @bind-Value="loginRequest.Password" type="password" class="w-full p-2 border border-gray-300 rounded" />
                <ValidationMessage For="@(() => loginRequest.Password)" />
            </div>

            <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition">
                Entrar
            </button>
        </div>
    </div>
</EditForm>

@code {
    private LoginRequest loginRequest = new LoginRequest();

    private async Task HandleLogin()
    {
        Console.WriteLine($"Tentando login com: {loginRequest.UserName} / {loginRequest.Password}");
    }    
}
